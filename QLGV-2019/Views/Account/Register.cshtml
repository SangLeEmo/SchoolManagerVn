
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/teacher.js"></script>

<div class="container">
    <h3 class="text-center">CREATE ACCOUNT</h3>

    <br />
    <form action="~/Account/RegisterUser" method="post" class="form-horizontal">
        <div class="form-group">
            <p id="error" style="color:red"></p>
            <label class="control-label col-sm-4">ID ACCOUNT:</label>
            <div class="col-sm-7">
                <input class="form-control" type="text" name="Id_Number" id="Id_Number" onclick="check_duclicte_user()"  value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">PASSWORD:</label>
            <div class="col-sm-7">
                <input class="form-control" type="password" name="Password" id="Password" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">FIRSTNAME:</label>
            <div class="col-sm-7">
                <input class="form-control" type="text" name="First_Name" id="First_Name" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">LASTNAME:</label>
            <div class="col-sm-7">
                <input class="form-control" type="text" name="Last_Name" id="Last_Name" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">ROLE:</label>
            <div class="col-sm-7">
                <select name="Role" id="Role" class="form-control" required>
                    <option value=""></option>
                    <option value="Admin">Admin</option>
                    <option value="Student">Student</option>
                    <option value="Staff">Staff</option>
                    <option value="Teacher">Teacher</option>
                </select>
            </div>
        </div>
        <div class="col-lg-8">
            <input type="submit" name="name"  id="create_user" class="btn btn-primary col-sm-offset-5" value="Create" />
        </div>
    </form>
</div>



