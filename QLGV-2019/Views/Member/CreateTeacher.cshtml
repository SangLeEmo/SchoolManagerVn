@using QLGV_2019.Models;
@using System.Collections.Generic;
@{
    ViewBag.Title = "CreateTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/teacher.js"></script>

<div class="container text-center">
    <h3>Create Teacher</h3>
    <br />
    <form action="~/Member/CreateTeacher" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-3">
                ID Teacher:
            </label>
            <div class="col-sm-3">
                <select name="Id" class="form-control" onclick="fill_in_form()" id="Id">
                    <option value=""></option>
                    @if(ViewBag.Account != null)
                    {
                        foreach(var item in ViewBag.Account)
                        {
                            <option value="@item.id_number">@item.id_number</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">
                First Name:
            </label>
            <div class="col-sm-6">
                <input type="text" name="First_Name" class="form-control" value="" id="First_Name"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">
                Last Name:
            </label>
            <div class="col-sm-6">
                <input type="text" name="Last_Name" class="form-control" value="" id="Last_Name" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">
                Ngành:
            </label>
            <div class="col-sm-3">
                <select class="form-control" name="Major_Name">
                    <option value=""></option>
                    @if(ViewBag.Nganh != null)
                    {
                        foreach(var item in ViewBag.Nganh)
                        {
                            <option value="@item.name">@item.name</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Lớp:</label>
            <div class="col-sm-3">
                <select name="Class_Name" class="form-control">
                    <option value=""></option>
                    @if (ViewBag.Lop != null)
                    {
                        foreach (var item in ViewBag.Lop)
                        {
                            <option value="@item.id">@item.id</option>
                        }
                    }
                </select>
                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">
                Date:
            </label>
            <div class="col-sm-3">
                <input type="date" name="Date_Of_Birth" class="form-control" value="" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">
                Phone:
            </label>
            <div class="col-sm-6">
                <input type="number" name="Phone" class="form-control" value="" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">
                Email:
            </label>
            <div class="col-sm-6">
                <input type="text" name="Email" class="form-control" value="" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">
                Address:
            </label>
            <div class="col-sm-6">
                <input type="text" name="Address" class="form-control" value="" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Degree:</label>
            <div class="col-sm-3">
                <select name="Degree" class="form-control">
                    <option value=""></option>
                    <option value="Cử Nhân">Cử Nhân</option>
                    <option value="Thạc Sĩ">Thạc Sĩ</option>
                    <option value="Tiến Sĩ">Tiến Sĩ</option>
                </select>
            </div>
        </div>

        <input type="submit" name="name" value="Create" class="btn btn-info" />
    </form>
</div>

<hr /><hr />
<div class="container text-center">
    <h3>Teacher List</h3><br />
    <table class="table table-bordered table-responsive">
        <tr>
            <th>Mã Giảng Viên</th>
            <th>Họ Và Tên</th>
            <th>Khoa</th>
            <th>Lớp Cố Vấn</th>
            <th>Quê Quán</th>
            <th>Mail</th>
            <th>Liên Lạc</th>
            <th>Thao Tác</th>
        </tr>
        @if (ViewBag.GV != null)
        {
            List<Tuple<Teacher, Class, Major>> item = ViewBag.GV;
            for (int i = 0; i < item.Count; i++)
            {
                <tr>
                    <td>@item[i].Item1.id</td>
                    <td>@item[i].Item1.last_name @item[i].Item1.first_name</td>
                    <td>@item[i].Item3.name</td>
                    <td>@item[i].Item2.id</td>
                    <td>@item[i].Item1.address</td>
                    <td>@item[i].Item1.email</td>
                    <td>@item[i].Item1.phone</td>
                    <td>
                        <a href="#" class="btn btn-warning">Update</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        }
    </table>
</div>
