<div class="container text-center">
    <h3>Danh sách Giảng viên</h3><br />
    <div class="table-responsive scrollvert">
        <table class="table table-bordered table-striped">
            <thead class="bg-info">
                <tr>
                    <th>Mã Giảng Viên</th>
                    <th>Họ Và Tên</th>
                    <th>Khoa</th>
                    <th>Quê Quán</th>
                    <th>Mail</th>
                    <th>Liên Lạc</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>            
            <tbody>
                @if (ViewBag.GV != null)
                {
                    List<Tuple<Teacher, Major>> item = ViewBag.GV;
                    for (int i = 0; i < item.Count; i++)
                    {
                        <tr>
                            <td>@item[i].Item1.id</td>
                            <td>@item[i].Item1.last_name @item[i].Item1.first_name</td>
                            <td>@item[i].Item2.name</td>
                            <td>@item[i].Item1.address</td>
                            <td>@item[i].Item1.email</td>
                            <td>@item[i].Item1.phone</td>
                            <td>
                                <a href="#" class="btn btn-warning">Update</a>
                                <a href="#" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    
</div>
