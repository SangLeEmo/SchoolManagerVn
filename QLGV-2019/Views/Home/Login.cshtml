
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!<!DOCTYPE html>
<fieldset class="Login" style="margin-left: 10%;margin-right: 10%; align-self:center;">
    <div class="container" style="display: table ; vertical-align: middle;">
        <div class="row">
            <div class="col-md-3 col-md-offset-4" style="border:ridge; webkit-border-radius: 5px; moz-border-radius: 5px; border-radius: 5px;">
                <h1>
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Login
                </h1>
                <div class="login-form">
                    <div class="form-group">
                        <input class="form-control" value="" placeholder="Tên tài khoản" id="login-name" type="text">
