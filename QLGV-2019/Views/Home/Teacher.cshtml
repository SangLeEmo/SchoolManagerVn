<!--Modal giang vien-->
<div class="modal" id="modalGV" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm giảng viên mới</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4">Mã giảng viên <span class="glyphicon glyphicon-user"></span></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="idGV" placeholder="Nhập mã giảng viên" name="idgv">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Lớp cố vấn <span class="glyphicon glyphicon-th-list"></span></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="classes" placeholder="Nhập lớp cố vấn" name="classes">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Khoa <span class="glyphicon glyphicon-briefcase"></span></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="faculty" placeholder="Nhập khoa" name="faculty">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Họ và tên <span class="glyphicon glyphicon-pencil"></span></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="name" placeholder="Nhập họ và tên" name="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Ngày sinh <span class="glyphicon glyphicon-calendar"></span></label>
                        <div class="col-md-8">
                            <input type="date" class="form-control" id="bDay" placeholder="Nhập ngày sinh" name="bDay">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Quê quán <span class="glyphicon glyphicon-tree-conifer"></span></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="POB" placeholder="Nhập quê quán" name="POB">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="email">Liên lạc <span class="glyphicon glyphicon-earphone"></span></label>
                        <div class="col-md-8">
                            <input type="number" class="form-control" id="contact" placeholder="Nhập địa chỉ liên lạc" name="contact">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger pull-left">
                    <span class="glyphicon glyphicon-trash"></span> Xóa
                </button>

                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-save"></span> Lưu
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



